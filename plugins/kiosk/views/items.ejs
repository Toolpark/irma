<div class="row">
	<div class="span12">
		<div class="page-header">
			<h1>Edit Items</h1>
		</div>
	</div>
</div>

<div class="row">
	<div class="span12">
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Name</th>
					<th>Ration</th>
					<th>Options</th>
					<th style="text-align: right;">Price</th>
				</tr>
			</thead>
			<tbody>
			<% for (var id in items) { %>
				<tr>
					<td><a href="/item/<%= id %>/edit"><%= items[id].name() %></a></td>
					<td>
					<% if (items[id].isStockable()) { %>
						<%= items[id].ration() %> <%=: items[id].unit() | downcase %>
					<% } %>
					</td>
					<td>
					<% if (items[id].isStockable()) { %> <span class="label">stock</span> <% } %>
					<% if (items[id].isBuyable()) { %> <span class="label">buy</span> <% } %>
					</td>
					<td style="text-align: right"><%-: items[id].price() / 100 | money %></td>
				</tr>
			<% } %>
			</tbody>
		</table>
	</div>
</div>

<footer>
<div class="row">
	<div class="span12" style="text-align: center;">
		<a class="btn btn-large" href="/account">View account</a>
		<a class="btn btn-large btn-primary" href="/admin">Admin</a>
		<a style="display:inline-block; margin-left: 18px;" href="/about"><img src="/img/irma.svg" style="height: 47px;" /></a>
	</div>
</div>
</footer>
