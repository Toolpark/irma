<div class="row">
	<div class="span12">
		<div class="page-header">
			<h1><%= item.name() %></h1>
		</div>
	</div>
</div>


<div class="row">
	<div class="span12">
		<dl class="dl-horizontal">
			<dt>ID</dt>
			<dd><%= item.id() %></dd>
			<dt>Name</dt>
			<dd><%= item.name() %></dd>
			<dt>Description</dt>
			<dd><%= item.description() %></dd>
			<dt>Price</dt>
			<dd><%= item.displayPrice() %></dd>
		</dl>
	</div>
</div>

<div class="row" style="margin-top: 36px; margin-bottom: 36px;">
	<div class="span12" style="text-align: center;">
		<a class="btn btn-large btn-success" href="/pay/<%= item.id() %>">Buy again</a>
	</div>
</div>

<footer>
<div class="row"">
	<div class="span12" style="text-align: center;">
		<a class="btn btn-large" href="/">Home</a>
		<a class="btn btn-large" href="/account">View account</a>
		<a style="display:inline-block; margin-left: 18px;" href="/about"><img src="/img/irma.svg" style="height: 47px;" /></a>
	</div>
</div>
