<div class="row">
	<div class="span12">
		<div class="page-header">
			<h1>Change Log: <%= item.name() %></h1>
		</div>
	</div>
</div>

<div class="row">
	<div class="span12" style="text-align: right;">
		<a class="btn" href="/items">Back to items</a>
	</div>
</div>

<div class="row">
	<div class="span12">
		<%
		var changes = item.changes();
		for (var i = changes.length - 1; i >= 0; i--) {
		%>
		<div class="changeset">
			<h4><%=: changes[i].time | isodate %></h4>

			<table class="table table-striped table-bordered">
				<tbody>
				<%
				var updates = changes[i].changes;
				for (var ii = 0; ii < updates.length; ii++) {
				%>
					<tr>
						<th><%= updates[ii].field %></th>
						<td class="original"><%= updates[ii].originalValue %></td>
						<td class="new"><%= updates[ii].newValue %></td>
					<tr>
				<% } %>
				</tbody>
			</table>
		</div>
		<% } %>
	</div>
</div>

<footer>
<div class="row">
	<div class="span12" style="text-align: center;">
		<a class="btn btn-large" href="/">Home</a>
		<a class="btn btn-large btn-primary" href="/admin">Admin</a>
		<a style="display:inline-block; margin-left: 18px;" href="/about"><img src="/img/irma.svg" style="height: 47px;" /></a>
	</div>
</div>
</footer>
