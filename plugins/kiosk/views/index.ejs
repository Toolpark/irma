
<div class="row">
	<div class="span12">
		<div class="page-header">
			<h1>What Do You Want To Do?</h1>
			<p>Select the item you wish to pay.</p>
		</div>
	</div>
</div>

<ul class="items">
<% for (var id in items) { %>
	<% if (items[id].buyable) { %>
	<li class="item row">
		<div class="span12">
			<a href="/pay/<%= id %>">
				<span class="name"><%= items[id].name %></span>
				<span class="description"><%= items[id].description %></span>
				<span class="price"><%= items[id].displayValue %></span>
			</a>
		</div>
	</li>
	<% } %>
<% } %>
</ul>

<div class="row" style="margin-top: 36px; margin-bottom: 36px;">
	<div class="span12" style="text-align: center;">
		<a class="btn btn-large" href="/account">View account</a>
		<a style="display:inline-block; margin-left: 18px;" href="/about"><img src="/img/irma.svg" style="height: 47px;" /></a>
	</div>
</div>
