
<%- partial('partials/adminnav', { 'page' : 'stocklist' }) %>

<div class="row">
	<div class="span12">
		<% 
		  for (var i = 0; i < stockInfo.length; i++) { 
		  	var item = stockInfo[i].item;
		  	var info = stockInfo[i].info;
		%>

		<div class="well">
			<h3><%= item.name() %></h3>
			<dl class="dl-horizontal">
				<dt>Ration size</dt>
				<dd><%= item.ration() %> <%=: item.unit() | downcase %></dd>
				<dt>Stock</dt>
				<dd><%= info.stock %> <%=: item.unit() | downcase %></dd>
				<dt>Average cons/w</dt>
				<dd><%= info.avgUnits %> <%=: item.unit() | downcase %></dd>
				<dt>Health</dt>
				<dd><%=: info.health | capitalize %></dd>
			</dl>
			<%
			var progStyle = 'progress-success';
			if (info.health == 'good') progStyle = 'progress-success';
			if (info.health == 'critical') progStyle = 'progress-warning';
			if (info.health == 'bad') progStyle = 'progress-danger';
			%>
			<div class="progress <%= progStyle %>">
				<div class="bar" style="width: <%= info.percent %>%;"></div>
			</div>
			<div style="position: relative; border-left: 1px solid rgba(0, 0, 0, 0.25); border-right: 1px solid rgba(0, 0, 0, 0.25); height: 10px;">
				<div style="border-bottom: 1px solid rgba(0, 0, 0, 0.25); height: 4px;"></div>
				<div style="margin-top: -10px; text-align: center;">
					<span style="padding: 4px 6px; color: rgba(0, 0, 0, 0.25); background-color: #f5f5f5;">3 avg. weeks</span>
				</div>
			</div>
		</div>

		<% } %>
	</div>
</div>


<footer>
<div class="row">
	<div class="span12" style="text-align: center;">
		<a class="btn btn-large" href="/">Home</a>
		<a class="btn btn-large" href="/account">View account</a>
		<a style="display:inline-block; margin-left: 18px;" href="/about"><img src="/img/irma.svg" style="height: 47px;" /></a>
	</div>
</div>
</footer>
