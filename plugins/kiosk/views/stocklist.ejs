<div class="row">
	<div class="span12">
		<div class="page-header">
			<h1>Stock List</h1>
		</div>
	</div>
</div>

<div class="row">
	<div class="span12">
		<% 
		  for (var i = 0; i < stockItems.length; i++) { 
		  	var item = stockItems[i].item;
		  	var stock = stockItems[i].stock;
		%>

		<article>
			<h3><%= item.name() %></h3>
			<p><%= stock.stock() %> <%= item.unit() %></p>
		</article>

		<% } %>
	</div>
</div>


<footer>
<div class="row">
	<div class="span12" style="text-align: center;">
