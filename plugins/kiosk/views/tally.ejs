
<%- partial('partials/adminnav', { 'page' : 'tally' }) %>

<div class="row">
	<div class="span12">
		<form action="/tally" method="post" class="" >
		<div class="control-group">
			<label for="select-user">User</label>
			<select id="select-user" name="user" placeholder="Select" class="span2">
			<% for (var id in users) { %>
				<option value="<%= id %>"><%= users[id].fullName() %></option>
			<% } %>
			</select>
		</div>

		<% for (var i = 0; i < items.length; i++) { %>
		<div class="control-group">
			<label for="input-item<%= items[i].id() %>"><%= items[i].name() %></label>
			<input type="hidden" name="item" value="<%= items[i].id() %>" />
			<input id="input-item<%= items[i].id() %>" name="marks" type="number" step="1" placeholder="Marks" class="span2" />
		</div>
		<% } %>

		<div class="form-actions">
            <button class="btn btn-primary" type="submit">Carry over</button>
          </div>
		</form>
	</div>
</div>

<footer>
<div class="row">
	<div class="span12" style="text-align: center;">
		<a class="btn btn-large" href="/">Home</a>
		<a class="btn btn-large" href="/account">View account</a>
		<a style="display:inline-block; margin-left: 18px;" href="/about"><img src="/img/irma.svg" style="height: 47px;" /></a>
	</div>
</div>
</footer>
